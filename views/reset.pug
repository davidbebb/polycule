doctype html
html
	head
		script(src='//d3js.org/d3.v3.min.js')
		link(href='https://fonts.googleapis.com/css?family=Sarpanch:900' rel='stylesheet' type='text/css')
		link(type='text/css' rel='stylesheet' href="/style1.css")
	body
		#resetDiv
			h1 polycule
			h2 Forgotten your password?
			p Enter your username or email address and we will send you an email with a replacement.
			p(id="errorMessage")=error
			form(name="reset" action="/login/reset" method="post" id="reset")
				input(type="text" class="inputBox" placeholder="Username or Email" id="username" name="username")
				br
				input(type="submit" id="submitButton" value="Reset my password")